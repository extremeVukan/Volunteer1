@{
    ViewBag.Title = "用户登录";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="login-panel">
                <div class="row">
                    <!-- 左侧信息区 -->
                    <div class="col-md-5 login-info">
                        <div class="login-banner">
                            <h2>大学生志愿者管理系统</h2>
                            <p>参与志愿服务，传递爱与希望</p>
                            <div class="stats-container">
                                <div class="stat-item">
                                    <div class="stat-value">1000+</div>
                                    <div class="stat-label">志愿者</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">500+</div>
                                    <div class="stat-label">活动</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">5000+</div>
                                    <div class="stat-label">服务时长</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 右侧登录表单 -->
                    <div class="col-md-7 login-form-container">
                        <div class="login-header">
                            <h3>用户登录</h3>
                            <p class="text-muted">请输入您的账号信息</p>
                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label>用户类型</label>
                                <div class="user-type-selector">
                                    <div class="user-type-option">
                                        <input type="radio" id="volunteer" name="userType" value="0" checked />
                                        <label for="volunteer">
                                            <span class="glyphicon glyphicon-heart"></span> 志愿者
                                        </label>
                                    </div>
                                    <div class="user-type-option">
                                        <input type="radio" id="admin" name="userType" value="1" />
                                        <label for="admin">
                                            <span class="glyphicon glyphicon-user"></span> 管理员
                                        </label>
                                    </div>
                                    <div class="user-type-option">
                                        <input type="radio" id="superadmin" name="userType" value="2" />
                                        <label for="superadmin">
                                            <span class="glyphicon glyphicon-tower"></span> 平台管理员
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>用户名</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    <input type="text" name="username" class="form-control" placeholder="请输入用户名" required />
                                </div>
                            </div>

                            <div class="form-group">
                                <label>密码</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                    <input type="password" name="password" class="form-control" placeholder="请输入密码" required />
                                </div>
                            </div>

                            <div class="form-group login-actions">
                                <button type="submit" class="btn btn-primary btn-login">
                                    <span class="glyphicon glyphicon-log-in"></span> 登录
                                </button>
                                <a href="@Url.Action("Register")" class="btn btn-default btn-register">
                                    <span class="glyphicon glyphicon-user"></span> 注册
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f7fa;
        padding-top: 40px;
        padding-bottom: 40px;
    }

    .container {
        margin-top: 50px;
    }

    .login-panel {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    /* 左侧信息区样式 */
    .login-info {
        background: linear-gradient(135deg, #4c75b2 0%, #2c5282 100%);
        color: white;
        padding: 40px 20px;
        height: 100%;
        position: relative;
    }

    .login-banner {
        text-align: center;
        padding: 20px 10px;
    }

    .login-banner h2 {
        font-weight: 600;
        margin-bottom: 20px;
        font-size: 22px;
    }

    .login-banner p {
        font-size: 16px;
        margin-bottom: 40px;
        opacity: 0.9;
    }

    .stats-container {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .stat-item {
        text-align: center;
        flex: 1;
        padding: 0 5px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: bold;
    }

    .stat-label {
        font-size: 12px;
        opacity: 0.8;
    }

    /* 右侧表单样式 */
    .login-form-container {
        padding: 30px 40px;
    }

    .login-header {
        margin-bottom: 25px;
        text-align: center;
    }

    .login-header h3 {
        color: #2c5282;
        font-weight: 600;
    }

    .login-header p {
        color: #718096;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        height: 42px;
        box-shadow: none;
        border-color: #e2e8f0;
    }

    .form-control:focus {
        border-color: #4c75b2;
        box-shadow: 0 0 0 1px rgba(76, 117, 178, 0.2);
    }

    .input-group-addon {
        background-color: #f8fafc;
        border-color: #e2e8f0;
        color: #4a5568;
    }

    /* 用户类型选择器样式 */
    .user-type-selector {
        display: flex;
        margin-bottom: 10px;
        gap: 10px;
    }

    .user-type-option {
        flex: 1;
    }

    .user-type-option input[type="radio"] {
        display: none;
    }

    .user-type-option label {
        display: block;
        background-color: #f8fafc;
        padding: 8px 12px;
        text-align: center;
        border: 1px solid #e2e8f0;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.2s;
        font-weight: normal;
    }

    .user-type-option input[type="radio"]:checked + label {
        background-color: #4c75b2;
        color: white;
        border-color: #4c75b2;
    }

    .login-actions {
        margin-top: 25px;
        text-align: center;
    }

    .btn-login {
        background-color: #4c75b2;
        border-color: #4c75b2;
        width: 120px;
        padding: 10px;
    }

    .btn-login:hover {
        background-color: #2c5282;
        border-color: #2c5282;
    }

    .btn-register {
        width: 120px;
        padding: 10px;
    }

    .alert {
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 20px;
    }

    /* 响应式调整 */
    
</style>