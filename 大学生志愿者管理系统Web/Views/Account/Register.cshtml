@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Account/_loginLayout.cshtml";
}

<div class="auth-container slide-up">
    <div class="row">
        <!-- 左侧信息区 -->
        <div class="col-md-5 register-info">
            <div class="register-banner">
                <div class="heart-icon"><i class="glyphicon glyphicon-heart"></i></div>
                <h2>加入志愿者团队</h2>
                <p>成为志愿者，用行动传递爱心</p>

                <div class="register-features">
                    <h4>注册后您可以：</h4>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="glyphicon glyphicon-check"></i></div>
                        <div class="feature-text">浏览并申请参加志愿服务活动</div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="glyphicon glyphicon-check"></i></div>
                        <div class="feature-text">记录并管理个人志愿服务时长</div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="glyphicon glyphicon-check"></i></div>
                        <div class="feature-text">申请专属志愿者证书</div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon"><i class="glyphicon glyphicon-check"></i></div>
                        <div class="feature-text">参与志愿者社区互动</div>
                    </div>
                </div>

                <div class="login-link">
                    已有账号？ <a href="@Url.Action("Login")">立即登录</a>
                </div>
            </div>
        </div>

        <!-- 右侧注册表单 -->
        <div class="col-md-7 register-form-container">
            <div class="register-header">
                <h3>用户注册</h3>
                <p class="text-muted">请填写以下信息完成注册</p>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger error-message">
                    <i class="glyphicon glyphicon-exclamation-sign"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>用户名</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" name="name" class="form-control" placeholder="请输入用户名" required autofocus />
                    </div>
                </div>

                <div class="form-group">
                    <label>密码</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" name="phone" class="form-control" placeholder="请输入密码" required />
                    </div>
                    <div class="help-text">注：密码在原系统中存储为电话号码字段</div>
                </div>

                <div class="form-group">
                    <label>邮箱</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input type="email" name="email" class="form-control" placeholder="请输入邮箱" />
                    </div>
                </div>

                <div class="form-group register-actions">
                    <button type="submit" class="btn btn-primary btn-register">
                        <i class="glyphicon glyphicon-ok"></i> 完成注册
                    </button>
                    <a href="@Url.Action("Login")" class="btn btn-default btn-back">
                        <i class="glyphicon glyphicon-arrow-left"></i> 返回登录
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* 左侧信息区样式 */
    .register-info {
        background: linear-gradient(135deg, #FF9966, #FF5E62);
        color: white;
        padding: 40px 20px;
        height: 100%;
        min-height: 500px;
    }

    .register-banner {
        text-align: center;
        padding: 20px 10px;
    }

    .heart-icon {
        font-size: 48px;
        margin-bottom: 15px;
        animation: pulse 1.5s infinite;
    }

    

    .register-banner h2 {
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 24px;
    }

    .register-banner p {
        font-size: 16px;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .register-features {
        margin-top: 30px;
        text-align: left;
        padding: 0 10px;
    }

    .register-features h4 {
        margin-bottom: 15px;
        font-size: 16px;
        font-weight: 600;
    }

    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .feature-icon {
        margin-right: 10px;
        font-size: 18px;
    }

    .feature-text {
        font-size: 14px;
    }

    .login-link {
        margin-top: 40px;
        font-size: 14px;
    }

    .login-link a {
        color: white;
        text-decoration: underline;
        font-weight: 600;
    }

    /* 右侧表单样式 */
    .register-form-container {
        padding: 40px;
        background-color: #fff;
    }

    .register-header {
        margin-bottom: 30px;
        text-align: center;
    }

    .register-header h3 {
        color: #333;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .register-header p {
        color: #6c757d;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        display: block;
    }

    .help-text {
        font-size: 12px;
        color: #6c757d;
        margin-top: 5px;
    }

    .form-control {
        height: 46px;
        box-shadow: none;
        border: 1px solid #ddd;
