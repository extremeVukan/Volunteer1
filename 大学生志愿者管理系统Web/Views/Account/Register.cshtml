    }

    .form-control:focus {
        border-color: #FF9966;
        box-shadow: 0 0 0 0.2rem rgba(255, 94, 98, 0.25);
    }

    .input-group-addon {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        color: #495057;
    }

    .register-actions {
        margin-top: 30px;
        display: flex;
        gap: 15px;
    }

    .btn-register, .btn-back {
        flex: 1;
        height: 46px;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-register {
        background-color: #FF5E62;
        border-color: #FF5E62;
    }

    .btn-register:hover {
        background-color: #e54e52;
        border-color: #e54e52;
    }

    .btn-register i, .btn-back i {
        margin-right: 8px;
    }

    .error-message {
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
        animation: shake 0.5s;
    }

    

        .register-form-container {
            padding: 30px 20px;
        }

        .register-actions {
            flex-direction: column;
        }

        .btn-register, .btn-back {
            width: 100%;
        }
    }
</style>