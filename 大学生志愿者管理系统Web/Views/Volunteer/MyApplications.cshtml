@model IEnumerable<DAL.ACTapply_T>
@{
    ViewBag.Title = "我的申请";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>我的申请</h2>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">申请列表</h3>
                </div>
                <div class="panel-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>申请编号</th>
                                    <th>活动编号</th>
                                    <th>活动名称</th>
                                    <th>活动地点</th>
                                    <th>需要人数</th>
                                    <th>发起人</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var apply in Model)
                                {
                                    <tr>
                                        <td>@apply.Aqueue_ID</td>
                                        <td>@apply.Act_ID</td>
                                        <td>@apply.Act_Name</td>
                                        <td>@apply.Act_place</td>
                                        <td>@apply.Need</td>
                                        <td>@apply.Holder</td>
                                        <td>
                                            <a href="@Url.Action("ActivityDetails", "Volunteer", new { id = apply.Act_ID })" class="btn btn-info btn-sm">
                                                <span class="glyphicon glyphicon-info-sign"></span> 查看详情
                                            </a>
                                            <a href="@Url.Action("SubmitApplication", "Volunteer", new { id = apply.Aqueue_ID })" class="btn btn-success btn-sm">
                                                <span class="glyphicon glyphicon-ok"></span> 提交申请
                                            </a>
                                            <a href="@Url.Action("DeleteApplication", "Volunteer", new { id = apply.Aqueue_ID })" class="btn btn-danger btn-sm">
                                                <span class="glyphicon glyphicon-remove"></span> 删除申请
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>您还没有申请任何活动</p>
                        </div>
                    }

                    <div class="text-center">
                        <a href="@Url.Action("Index", "Volunteer")" class="btn btn-default">
                            <span class="glyphicon glyphicon-arrow-left"></span> 返回活动列表
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>