@model DAL.ActivityT
@{
    ViewBag.Title = "活动详情";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">活动详情</h3>
                </div>
                <div class="panel-body">
                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.Image) && !Model.Image.Contains("暂无图片"))
                                {
                                    <img src="@Url.Content("~/" + Model.Image)" alt="活动图片" class="img-responsive img-thumbnail" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Content/Images/暂无图片.gif")" alt="暂无图片" class="img-responsive img-thumbnail" />
                                }
                            </div>
                            <div class="col-md-8">
                                <h2>@Model.activity_Name</h2>
                                <table class="table table-striped">
                                    <tr>
                                        <th>活动编号</th>
                                        <td>@Model.activity_ID</td>
                                    </tr>
                                    <tr>
                                        <th>活动类型</th>
                                        <td>@Model.activity_type</td>
                                    </tr>
                                    <tr>
                                        <th>开始时间</th>
                                        <td>@Model.addtime</td>
                                    </tr>
                                    <tr>
                                        <th>结束时间</th>
                                        <td>@Model.stoptime</td>
                                    </tr>
                                    <tr>
                                        <th>地点</th>
                                        <td>@Model.place</td>
                                    </tr>
                                    <tr>
                                        <th>需要人数</th>
                                        <td>@Model.renshu</td>
                                    </tr>
                                    <tr>
                                        <th>发起人</th>
                                        <td>@Model.Holder</td>
                                    </tr>
                                    <tr>
                                        <th>状态</th>
                                        <td>
                                            @if (Model.status == "已结束")
                                            {
                                                <span class="label label-danger">已结束</span>
                                            }
                                            else
                                            {
                                                <span class="label label-success">进行中</span>
                                            }
                                        </td>
                                    </tr>
                                </table>

                                <div class="well">
                                    <h4>活动描述</h4>
                                    <p>@Html.Raw(Model.descn)</p>
                                </div>

                                <div class="text-center">
                                    <a href="@Url.Action("ApplyActivity", "Volunteer", new { id = Model.activity_ID })" class="btn btn-primary btn-lg">
                                        <span class="glyphicon glyphicon-ok"></span> 申请参加
                                    </a>
                                    <a href="@Url.Action("Index", "Volunteer")" class="btn btn-default btn-lg">
                                        <span class="glyphicon glyphicon-arrow-left"></span> 返回列表
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            未找到活动信息
                        </div>
                        <p>
                            <a href="@Url.Action("Index", "Volunteer")" class="btn btn-default">
                                <span class="glyphicon glyphicon-arrow-left"></span> 返回列表
                            </a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>