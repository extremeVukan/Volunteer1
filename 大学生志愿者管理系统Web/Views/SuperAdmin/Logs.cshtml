@model IEnumerable<DAL.dalogT>
@{
    ViewBag.Title = "系统日志";
}

<div class="container">
    <div class="page-header">
        <h2><span class="glyphicon glyphicon-list-alt"></span> 系统日志</h2>
        <p class="lead">记录系统中的所有操作</p>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <span class="glyphicon glyphicon-exclamation-sign"></span> @TempData["ErrorMessage"]
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="panel-title"><span class="glyphicon glyphicon-th-list"></span> 日志记录</h3>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="搜索日志" id="searchLogs">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-search"></span> 搜索
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>用户名</th>
                                    <th>操作类型</th>
                                    <th>操作时间</th>
                                    <th>操作表</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var log in Model)
                                    {
                                        <tr>
                                            <td>@log.log_id</td>
                                            <td>@log.username</td>
                                            <td>@log.log_type</td>
                                            <td>@(log.action_date != null ? (log.action_date is DateTime dt ? dt.ToString("yyyy-MM-dd HH:mm:ss") : log.action_date.ToString()) : "-")</td>
                                            <td>@log.action_table</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">暂无日志数据</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="text-center">
                        <ul class="pagination">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a href="@Url.Action("Logs", new { page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <a href="@Url.Action("Index")" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> 返回平台管理中心
            </a>
        </div>
    </div>
</div>