@model IEnumerable<DAL.adminT>
@{
    ViewBag.Title = "选择要删除的管理员";
}

<div class="container">
    <div class="page-header">
        <h2><span class="glyphicon glyphicon-trash"></span> 选择要删除的管理员</h2>
        <p class="lead">请从下列管理员中选择一个进行删除</p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">管理员列表</h3>
                </div>
                <div class="panel-body">
                    <div class="alert alert-warning">
                        <span class="glyphicon glyphicon-warning-sign"></span> 警告：删除操作无法撤销，请谨慎操作！
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>姓名</th>
                                    <th>性别</th>
                                    <th>电话</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var admin in Model)
                                    {
                                        <tr>
                                            <td>@admin.admin_ID</td>
                                            <td>@admin.admin_Name</td>
                                            <td>@admin.sex</td>
                                            <td>@admin.telephone</td>
                                            <td>
                                                <a href="@Url.Action("DeleteAdmin", new { id = admin.admin_ID })" class="btn btn-danger btn-sm">
                                                    <span class="glyphicon glyphicon-trash"></span> 删除
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">暂无管理员数据</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <a href="@Url.Action("Index")" class="btn btn-default">
                    <span class="glyphicon glyphicon-arrow-left"></span> 返回平台管理中心
                </a>
            </div>
        </div>
    </div>
</div>